<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Uzuy.Splash.Main" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/uzuy_surface</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_uzuy</item>
        <item name="postSplashScreenTheme">@style/Theme.Uzuy.Main</item>
    </style>

    <style name="Theme.Uzuy.Main" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/uzuy_primary</item>
        <item name="colorOnPrimary">@color/uzuy_onPrimary</item>
        <item name="colorPrimaryContainer">@color/uzuy_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/uzuy_onPrimaryContainer</item>
        <item name="colorSecondary">@color/uzuy_secondary</item>
        <item name="colorOnSecondary">@color/uzuy_onSecondary</item>
        <item name="colorSecondaryContainer">@color/uzuy_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/uzuy_onSecondaryContainer</item>
        <item name="colorTertiary">@color/uzuy_tertiary</item>
        <item name="colorOnTertiary">@color/uzuy_onTertiary</item>
        <item name="colorTertiaryContainer">@color/uzuy_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/uzuy_onTertiaryContainer</item>
        <item name="colorError">@color/uzuy_error</item>
        <item name="colorErrorContainer">@color/uzuy_errorContainer</item>
        <item name="colorOnError">@color/uzuy_onError</item>
        <item name="colorOnErrorContainer">@color/uzuy_onErrorContainer</item>
        <item name="android:colorBackground">@color/uzuy_background</item>
        <item name="colorOnBackground">@color/uzuy_onBackground</item>
        <item name="colorSurface">@color/uzuy_surface</item>
        <item name="colorOnSurface">@color/uzuy_onSurface</item>
        <item name="colorSurfaceVariant">@color/uzuy_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/uzuy_onSurfaceVariant</item>
        <item name="colorOutline">@color/uzuy_outline</item>
        <item name="colorOnSurfaceInverse">@color/uzuy_inverseOnSurface</item>
